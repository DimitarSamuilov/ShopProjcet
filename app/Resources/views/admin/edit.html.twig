{% extends("base.html.twig") %}

{% block main %}
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger">
        {% for error in app.session.flashBag.get('error') %}
            {{ error }}
        {% endfor %}
    {% endif %}
    </div>
    {#{{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}#}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data"  action="{{ path("admin_edit_merchandise",{'id':merchandise.id}) }}"
                  method="POST">
                <fieldset>
                    <legend>Редактиране на продукт</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_username">Име</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="user_username"
                                   name="merchandise_form[name]" required="required" value="{{ merchandise.name }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="price">Цена</label>
                        <div class="col-sm-6">
                            <input type="number" class="form-control" id="price" value="{{ merchandise.price }}"
                                   name="merchandise_form[price]"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="promo">Промоционална цена</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="promo" value="{{ merchandise.promoPrice }}"
                                   name="merchandise_form[promoPrice]"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6">
                            <img width="150" height="150" src="{{ asset(image) }}">
                            <h3>Текущо изображение</h3>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_title">Изображение</label>
                        <div class="col-sm-4 ">
                            <input type="file" name="merchandise_form[image]">
                        </div>
                    </div>
                    <div>
                        {{ form_row(form._token) }}
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-primary">Въведи</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

