{% extends("base.html.twig") %}

{% block main %}
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger">
        {% for error in app.session.flashBag.get('error') %}
            {{ error }}
        {% endfor %}
        </div>
        {% endif %}
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>ID</th>
            <th>Име</th>
            <th>Цена</th>
            <th>Описание</th>
            <th>Операции </th>

        </tr>
        </thead>
        <tbody>
        {% for single in merchandise %}
            <tr>
                <td>{{ single.id }}</td>
                <td>{{ single.name }}</td>
                <td>{{ single.price }}</td>
                <td>{{ single.summary }}</td>
                <td><a href="{{ path('admin_edit_merchandise',{id:single.id}) }}"
                       class="btn btn-primary btn-xs">Edit</a></td>
                <td><a href="{{ path('admin_delete_merchandise',{id:single.id}) }}" class="btn btn-primary btn-xs">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_add_item') }}" class="btn btn-primary btn-xs">Add new Item</a>
{% endblock %}